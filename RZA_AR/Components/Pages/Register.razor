@page "/Register"
@using RZA_AR.Models
@using RZA_AR.Services
@inject CustomerService CustomerService
@rendermode InteractiveServer
@inject NavigationManager NavigationManager



    <div class="register-page">
        <h3 class="register-title">Register: <i class="bi bi-paw-fill"></i></h3>
        <div class="register-container">
            <img src="https://skybirdsales.co.uk/wp-content/uploads/2021/09/Lorikeet-Rainbow.jpg" alt="Lorikeet Rainbow" class="background-image">
            <div class="form-overlay">
                <div class="form-group">
                    <label>First Name</label>
                    <input @bind=newCustomer.Firstname>
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <input @bind=newCustomer.Lastname>
                </div>

                <div class="form-group">
                    <label>Username</label>
                    <input @bind=newCustomer.Username>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input @bind=newCustomer.Password>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input @bind=newCustomer.Email>
                </div>

                <button class="register-button" @onclick=@RegisterCustomer>
                    Register <i class="bi bi-arrow-right-circle"></i>
                </button>

                @if (successMessage != null) 
                {
                    <div class="success-message">@successMessage</div> 
                }
            </div>
        </div>
    </div>


<style>
    .register-page {
        font-family: Arial, sans-serif;
        color: white;
        text-align: left;
        padding: 20px;
        background-color: #a7cc4b;
    }

    .register-title {
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 50px;
    }

    .register-container {
        position: relative;
        max-width: 800px;
        margin: auto;
        background-color: #a7cc4b;
        border-radius: 15px;
        overflow: hidden;
    }

    .background-image {
        width: 100%;
        height: auto;
        display: block;
    }

    .form-overlay {
        position: absolute;
        top: 20px;
        left: 20px;
        background-color: rgba(0, 70, 0, 0.6); /*Dark green with transparency */
        padding: 20px;
        border-radius: 10px;
        width: 250px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .register-button {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #007E42; /* lightish green */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
    }

    .register-button i {
        margin-left: 5px;
        }

    .register-button:hover {
        background-color: #004014; /* Darker green on hover */
    }

    .success-message { 
        color: #13e30b;
        margin-top: 15px; 
        font-weight: bold;
    }

</style>

@code {
    
    private Customer newCustomer = new Customer();
    private string successMessage;

    private async Task RegisterCustomer()
    {
        await CustomerService.AddCustomerAsync(newCustomer);
        successMessage = "Your account has been successfully created!";
    }
}